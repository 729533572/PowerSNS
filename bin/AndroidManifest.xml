<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.powersns"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sns.view.OpenActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Holo.Light.NoActionBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.sns.view.LoginActivity" android:launchMode="singleTask"></activity>
        <activity android:name="com.sns.view.PersonalActivity" android:theme="@android:style/Theme.Holo.Light.NoActionBar"></activity>
        <activity android:name="com.sns.view.RegisterActivity" android:launchMode="singleTask"></activity>
        <activity android:name="com.sns.view.UpdatePersonalActivity" android:launchMode="singleTask"></activity>
        <activity android:name="com.sns.view.UpdatePasswordActivity" android:launchMode="singleTask"></activity>
        <activity android:name="com.sns.view.DiaryActivity" android:theme="@android:style/Theme.Holo.Light.NoActionBar"></activity>
        <activity android:name="com.sns.view.DiaryMessActivity" android:theme="@android:style/Theme.Holo.Light.NoActionBar"></activity>
        <activity android:name="com.sns.view.WriteDiaryActivity" android:theme="@android:style/Theme.Holo.Light.NoActionBar"></activity>
        <activity android:name="com.sns.view.FriendsListActivity" android:theme="@android:style/Theme.Holo.Light.NoActionBar"></activity>
        <activity android:name="com.sns.view.AddFriendActivity" android:theme="@android:style/Theme.Holo.Light.NoActionBar"></activity>
        <activity android:name="com.sns.view.FriendRequestListActivity" android:theme="@android:style/Theme.Holo.Light.NoActionBar"></activity>
        <activity android:name="com.sns.view.AlbumListActivity" android:theme="@android:style/Theme.Holo.Light.NoActionBar"></activity>
        <activity android:name="com.sns.view.CreateNewAlbumActivity" android:theme="@android:style/Theme.Holo.Light.NoActionBar"></activity>
        <activity android:name="com.sns.view.PhotoListActivity" android:theme="@android:style/Theme.Holo.Light.NoActionBar"></activity>
        <activity android:name="com.sns.view.ChangeAlbumPhotoActivity" android:theme="@android:style/Theme.Holo.Light.NoActionBar"></activity>
    </application>

</manifest>